
  <%= form_with(url: '/flights', method: 'get') do %>
    <%= label_tag(:from, "from") %>
    <%= select_tag(:from, options_for_select(@airport_options), name: 'from') %>
    <%= label_tag(:to, "to") %>
    <%= select_tag(:to, options_for_select(@airport_options), name: 'to') %>
    <%= date_select("selected_date", {discard_year: true}) %> <br>
